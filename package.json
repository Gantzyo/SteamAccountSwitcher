{
  "name": "steamaccountswitcher",
  "version": "0.0.1",
  "description": "A simple GUI to swtich between your steam accounts",
  "main": "src/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "package-win": "electron-packager . steamaccountswitcher --overwrite --asar --platform=win32 --arch=ia32 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Steam Account Switcher\"",
    "default-package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "default-package-win": "electron-packager . steamaccountswitcher --overwrite --asar --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Steam Account Switcher\"",
    "default-package-linux": "electron-packager . steamaccountswitcher --overwrite --asar --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gantzyo/SteamAccountSwitcher.git"
  },
  "author": "Gantzyo",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Gantzyo/SteamAccountSwitcher/issues"
  },
  "homepage": "https://github.com/Gantzyo/SteamAccountSwitcher#readme",
  "devDependencies": {
    "electron": "^1.7.11"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.3",
    "@fortawesome/fontawesome-free-solid": "^5.0.6",
    "bootstrap": "^4.0.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.12.9",
    "rage-edit": "^1.0.2"
  }
}
